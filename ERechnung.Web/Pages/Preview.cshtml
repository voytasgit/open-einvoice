@page
@model PreviewModel

<h2 class="mb-4">🔍 Vorschau deiner Rechnung</h2>

<div class="card mb-4">
    <div class="card-body">

        <h5>💰 Gesamtsumme</h5>
        <p class="fs-4 fw-bold">
            @Model.Invoice.Invoice.TotalGrossAmount.ToString("C")
        </p>

        <hr />

        <h5>🏦 Zahlung</h5>
        <p>
            IBAN: @Model.Invoice.Invoice.Payment.Iban
        </p>

        <hr />

        <h5>👥 Parteien</h5>
        <p>
            Verkäufer: @Model.Invoice.Seller.Name<br />
            Käufer: @Model.Invoice.Buyer.Name
        </p>

    </div>
</div>

<form method="post" asp-page-handler="Download">
    <button name="format" value="xrechnung"
            class="btn btn-success btn-lg me-2">
        📥 XRechnung herunterladen
    </button>
    <!--
    <button name="format" value="zugferd"
            class="btn btn-outline-secondary btn-lg">
        📥 ZUGFeRD herunterladen
    </button>
    -->
</form>
<div class="mt-3">
    <a asp-page="/Create"
       class="btn btn-link">
        ← Zurück zur Bearbeitung
    </a>
</div>

